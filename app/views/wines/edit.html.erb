<%= render :partial => "layouts/navigation" %>

<h2 class="header">Edit a Wine</h2>

<%= form_for([@user, @wine], multipart: true) do |f| %>
  <div class="form-group"
    <%= f.label "Name" %><br>
    <%= f.text_field :name, class: "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label "Year" %><br>
    <%= f.text_field :year, class: "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label "Description" %><br>
    <%= f.text_field :description, class: "form-control" %><br>
  </div>
  <div class="field form-group">
    <%= f.label "Picture" %>
    <%= f.file_field :avatar %><br>
  </div>
  <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  <%= f.submit "Cancel", class: "btn btn-default btn-lg" %>
<% end %>
