<%= render "navigation" %><br>

<%= form_for @user, html: { class: "form-horizontal" }  do |f| %>
  <div class="form-group">
    <%= f.label "First Name", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Last Name", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Email", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :email, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "City", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :city, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "State", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :state, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Country", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :country, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Picture URL", class: "col-md-2 col-md-offset-1" %>
    <div class="col-md-4">
      <%= f.text_field :picture_url, class: "form-control" %><br>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-8">
      <%= f.submit "Edit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<br>
<%= form_for @user, html: { class: "form-horizontal", method: "delete"} do |f| %>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-8">
      <%= f.submit "DELETE", class: "btn btn-danger" %>
  </div>
  </div>
<% end %>
<br>
